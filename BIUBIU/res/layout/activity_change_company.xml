<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeUserNameActivity"
    android:background="@color/page_tag_bg" >

   <RelativeLayout
        android:id="@+id/top_changname_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center" 
        android:background="@color/mine_chird_top_bg">

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="50dp"
            android:layout_height="44dp"          
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_changeName_mine"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:src="@drawable/main_name_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/change_name_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mine_selectoe_company_title"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/complete_rl"
            android:layout_width="64dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"          
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <TextView
                android:id="@+id/mine_changename_wancheng_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_complete"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_changname_rl"
        android:background="#cccccc" />

    <TextView
        android:id="@+id/textView3_changename_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/top_changname_rl"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:text="公司"
        android:textColor="#a0a0a0"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/name_company_et"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_alignBottom="@+id/textView3_changename_tv"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/textView3_changename_tv"
        android:background="@null"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp" />

    <View
        android:id="@+id/change_user_name_view"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignLeft="@+id/textView3_changename_tv"
        android:layout_below="@+id/textView3_changename_tv"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp"
        android:background="@color/mine_chird_view_bottom"/>

   
    <TextView
        android:id="@+id/textView2_changename"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:text="@string/bottom_hint"
        android:textColor="#bfbfbf"
        android:textSize="12sp" 
       />
    
       <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change_user_name_view"
        android:orientation="horizontal" 
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp">

        <TextView
            android:id="@+id/text_num_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#565656"
            android:text="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            android:textColor="#565656"
            android:text="/16" />
    </LinearLayout>

</RelativeLayout>
