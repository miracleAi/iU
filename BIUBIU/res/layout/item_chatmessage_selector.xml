<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
             
        >

        <LinearLayout
            android:id="@+id/center_item_chatmessage_dialog_ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/dialog_bg"
            android:orientation="vertical">
            <TextView
                android:id="@+id/copy_item_chatmessage_tv"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:textSize="16sp"
                android:textColor="@color/chatmessage_textcolor_selector_bg"
                android:background="@drawable/kongjianruoqu_bg"
                android:text="复制"/>
            <View android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <TextView 
                android:id="@+id/delete_item_chatmessage_tv"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:textSize="16sp"
                android:background="@drawable/kongjianruoqu_bg"
                android:textColor="@color/chatmessage_textcolor_selector_bg"
                android:text="删除"/>
<!--              <View android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="#cccccc"/>
            <TextView 
                android:id="@+id/dismiss_item_chatmessage_tv"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:gravity="center"
                android:text="取消"/> -->
        </LinearLayout>
        <View 
            android:id="@+id/top_item_chatmessage_dialog_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
           
            android:layout_above="@+id/center_item_chatmessage_dialog_ll"/>
        <View 
            android:id="@+id/bottom_item_chatmessage_dialog_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" 
            
            android:layout_below="@+id/center_item_chatmessage_dialog_ll"/>

</RelativeLayout>
    

</LinearLayout>
