<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/register_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/registertwo_top_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_green" >

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@drawable/kongjianruoqu_bg" >

            <ImageView
                android:id="@+id/title_left_imv"
                android:layout_width="22dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:padding="6dp"
                android:src="@drawable/main_name_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/login_title_text"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/center1_registertwo_rl"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_below="@id/registertwo_top_rl"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="59dp"
        android:gravity="center" >

        <ImageView
            android:id="@+id/userhead_imv"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/main_icon" />

        <TextView
            android:id="@+id/virify_tv"
            android:layout_width="58.5dp"
            android:layout_height="22dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/register_imageview_photo_bg"
            android:gravity="center"
            android:text="待审核"
            android:textColor="@color/white"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/photo_imageview" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/center2_registertwo_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/center1_registertwo_rl"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/is_student_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <ImageView
                android:id="@+id/in_school_imv"
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:layout_marginLeft="72dp"
                android:src="@drawable/register_shenfen_imageview_btn_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="@string/register_two_inschool" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/graduate_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right" >

            <ImageView
                android:id="@+id/out_school_imv"
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/register_shenfen_imageview_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="72dp"
                android:gravity="center"
                android:text="@string/register_two_outschool" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/registertwo_center3_rl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/center2_registertwo_ll"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="18dp" >

        <ImageView
            android:id="@+id/school_registertwo_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/register_shenfen_imageview_school" />

        <TextView
            android:id="@+id/school_registertwo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/school_registertwo_img"
            android:hint="@string/register_two_selecter_school"
            android:text=""
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/school_registertwo_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_right_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/registertwo_center3_rl"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/register_view" />

    <RelativeLayout
        android:id="@+id/registertwo_center4_rl"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_below="@id/registertwo_center3_rl"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="16dp" >

        <ImageView
            android:id="@+id/city_registertwo_img"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/register_shenfen_imageview_shenfen" />

        <TextView
            android:id="@+id/city_registertwo_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/city_registertwo_img"
            android:hint="@string/register_two_select_city"
            android:text=""
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/city_registertwo_right_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/main_right_icon" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/registertwo_center4_rl"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="@color/register_view" />

    <RelativeLayout
        android:id="@+id/next_registertwo_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:layout_below="@id/registertwo_center4_rl"
        android:layout_marginLeft="62.5dp"
        android:layout_marginRight="62.5dp"
        android:layout_marginTop="78dp"
        android:background="@drawable/register_btn_disabled" >

        <TextView
            android:id="@+id/next_registerone_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/register_complete"
            android:textColor="@color/white"
            android:textSize="15sp" />
    </RelativeLayout>

    <include layout="@layout/loading_layout" />

    <include layout="@layout/load_error_layout" />

</RelativeLayout>