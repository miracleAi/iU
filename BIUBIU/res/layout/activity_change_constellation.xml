<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_tag_bg"
   >

   <RelativeLayout
        android:id="@+id/top_changname_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:gravity="center" 
        android:background="@color/mine_chird_top_bg">

        <RelativeLayout
            android:id="@+id/back_changexingzuo_mine_rl"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center" >

            <ImageView
                android:id="@+id/back_changexingzuo_mine"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:src="@drawable/main_name_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_change_constell_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/mine_constellation_title"
            android:textColor="@color/white"
            android:textSize="18sp" />

<RelativeLayout
    android:id="@+id/mine_changexingzuo_wancheng_rl"
    android:layout_width="64dp"
    android:layout_height="44dp"
    android:layout_alignParentRight="true"
    android:gravity="center"
    android:background="@drawable/kongjianruoqu_bg" >

        <TextView
            android:id="@+id/mine_changexingzuo_wancheng_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            
            android:layout_centerVertical="true"
           
            android:text="@string/mine_complete"
            android:textColor="@color/white"
            android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>
    
    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_changname_rl"
        android:background="#cccccc" />
    
     <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"       
        android:orientation="horizontal">
     <TextView
        android:id="@+id/tip_city_change_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        
        android:layout_marginLeft="30dp"
        android:layout_centerVertical="true"
        android:text="星座"
        android:textColor="#a0a0a0"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/constellationName_change_city_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@id/tip_city_change_tv"
        android:background="@null"
        android:text=""
        android:textColor="@color/black"
        android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1px"
       	android:background="@color/mine_chird_view_bottom"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="6dp"
        />

    
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:orientation="vertical"
        android:background="@color/white">
    
    	<TextView android:layout_width="wrap_content"
    	    android:layout_height="50dp"
    	    android:gravity="center"
    	    
    	    android:textColor="@color/mine_chird_top_bg"
    	    android:textSize="17sp"
    	    android:layout_marginLeft="10dp"
    	    android:text="选择你的星座"/>
    	<View android:layout_width="match_parent"
    	    android:layout_height="1px"
    	    android:background="@color/tablebar_check"/>
    
        <com.android.biubiu.common.city.WheelView
            android:id="@+id/id_constellation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            
            android:background="@color/gray">
            </com.android.biubiu.common.city.WheelView>
            
         <View android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/white"/>
        </LinearLayout>

</LinearLayout>
