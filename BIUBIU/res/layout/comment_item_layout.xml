<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/head_imageview"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/photo_fail" />

    <LinearLayout
        android:id="@+id/nickname_school_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/head_imageview"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/head_imageview"
        android:orientation="vertical">

        <TextView
            android:id="@+id/nickname_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#8883bc"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/school_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="北京理工大学"
            android:textColor="#999999"
            android:textSize="11sp" />
    </LinearLayout>

    <ImageView
        android:id="@+id/more_img"
        android:layout_width="15dp"
        android:layout_height="8dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/head_imageview"
        android:layout_marginRight="10dp"
        android:src="@drawable/found_btn_more" />

    <TextView
        android:id="@+id/time_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/more_img"
        android:layout_marginRight="10dp"
        android:layout_marginTop="16dp"
        android:textColor="#999999"
        android:textSize="11sp" />

    <TextView
        android:id="@+id/content_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/nickname_school_layout"
        android:layout_below="@+id/time_textview"
        android:layout_marginRight="10dp"
        android:layout_marginTop="18dp"
        android:text="sdlfjldjfldsjfljdsl"
        android:textColor="#333333"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/nickname_school_layout"
        android:layout_below="@+id/content_textview"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:background="#cccccc" />
</RelativeLayout>