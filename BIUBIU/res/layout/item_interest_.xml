<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView 
            android:id="@+id/img_item_interest_"
            android:layout_width="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/main_tab_imageview_left_green"/>
    <TextView
        android:id="@+id/interest_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        
       android:layout_toRightOf="@id/img_item_interest_"
        android:layout_marginLeft="20dp"
        android:text="运动" />
    </RelativeLayout>
    
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="wrap_content"
        
        android:orientation="horizontal">
        <View 
            android:id="@+id/id_view_interest"
            android:layout_width="1px"
            android:layout_height="207dp"
            android:layout_marginLeft="22dp"
            android:background="@color/gray"/>
        <GridView 
            android:id="@+id/id_gridView_interest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            
            android:layout_marginRight="20dp"
            android:background="@color/tou"
            android:numColumns="4"  
		    android:verticalSpacing="13dp"  
		    android:horizontalSpacing="21dp"  
		   	android:listSelector="#00000000"
		   	android:fadingEdge="none" 
		    android:stretchMode="columnWidth"  
		    android:gravity="center"  
            
            />
        </LinearLayout>
        <RelativeLayout 
            android:id="@+id/bottom_item_interest"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:visibility="gone">
        <View android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/gray"
            android:layout_marginLeft="22dp"
            />

        <TextView
            android:id="@+id/tx_item_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/page_text1"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="25dp"
            android:text="@string/bottom_hint" />
        
        </RelativeLayout>
    

</LinearLayout>
