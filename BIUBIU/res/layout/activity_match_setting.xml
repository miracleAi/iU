<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_back_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_green" >

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@drawable/kongjianruoqu_bg" >

            <ImageView
                android:id="@+id/title_left_imv"
                android:layout_width="22dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:padding="6dp"
                android:src="@drawable/main_name_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/photo_index_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/setting_title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/set_tag_bg"
                    android:orientation="vertical"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:background="@null"
                        android:gravity="center_vertical"
                        android:text="@string/setting_show_to_me"
                        android:textColor="@color/set_tag_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="112dp"
                    android:background="@color/white"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="14dp"
                        android:paddingTop="14dp" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal" >

                            <TextView
                                android:id="@+id/setting_boy_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/setting_boy"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:id="@+id/boy_layout"
                                android:layout_width="46dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="39dp"
                                android:padding="6dp" >

                                <ImageView
                                    android:id="@+id/boy_toggle"
                                    android:layout_width="34dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/setting_btn_no" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal" >

                            <TextView
                                android:id="@+id/setting_gril_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/setting_gril"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:id="@+id/girl_layout"
                                android:layout_width="46dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="39dp"
                                android:padding="6dp" >

                                <ImageView
                                    android:id="@+id/girl_toggle"
                                    android:layout_width="34dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/setting_btn_no" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_marginBottom="14dp"
                        android:layout_marginTop="14dp"
                        android:background="@color/set_divider1" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingBottom="14dp"
                        android:paddingTop="14dp" >

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal" >

                            <TextView
                                android:id="@+id/setting_city_common_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/setting_city_common"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:id="@+id/city_layout"
                                android:layout_width="46dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="39dp"
                                android:padding="6dp" >

                                <ImageView
                                    android:id="@+id/city_toggle"
                                    android:layout_width="34dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/setting_btn_no" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="42dp"
                            android:layout_gravity="center_horizontal" >

                            <TextView
                                android:id="@+id/setting_unlimited_tv"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:text="@string/setting_unlimited"
                                android:textColor="@color/black"
                                android:textSize="14sp" />

                            <RelativeLayout
                                android:id="@+id/unlimit_layout"
                                android:layout_width="46dp"
                                android:layout_height="35dp"
                                android:layout_marginLeft="39dp"
                                android:padding="6dp" >

                                <ImageView
                                    android:id="@+id/unlimit_toggle"
                                    android:layout_width="34dp"
                                    android:layout_height="23dp"
                                    android:layout_centerVertical="true"
                                    android:src="@drawable/setting_btn_no" />
                            </RelativeLayout>
                        </RelativeLayout>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/set_tag_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/setting_age_range_in"
                        android:textColor="@color/set_tag_text"
                        android:textSize="12sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/age_min_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/set_tag_text"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="岁-"
                            android:textColor="@color/set_tag_text"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/age_max_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/set_tag_text"
                            android:textSize="12sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="岁"
                            android:textColor="@color/set_tag_text"
                            android:textSize="12sp" />
                    </LinearLayout>
                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/seek_linear"
                    android:layout_width="match_parent"
                    android:layout_height="67dp"
                    android:background="@color/white"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp" >
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/set_tag_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/setting_character_tags"
                        android:textColor="@color/set_tag_text"
                        android:textSize="12sp" />
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/personal_rl"
                        android:layout_width="match_parent"
                        android:layout_height="48dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="20dp"
                            android:text="@string/setting_character_tags_her"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <ImageView
                            android:layout_width="5dp"
                            android:layout_height="11dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:src="@drawable/setting_btn_in" />
                    </RelativeLayout>

                    <com.android.biubiu.view.MyGridView
                        android:id="@+id/interest_tag_gv"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="13dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="0.5dp"
                        android:background="@color/white"
                        android:horizontalSpacing="24dp"
                        android:numColumns="4"
                        android:stretchMode="columnWidth"
                        android:verticalSpacing="13dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="@color/set_tag_bg"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="20dp"
                        android:gravity="center_vertical"
                        android:text="@string/setting_new_message_notice"
                        android:textColor="@color/set_tag_text"
                        android:textSize="12sp" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/setting_new_message_notice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_new_message_notice"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/msg_layout"
                        android:layout_width="46dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:padding="6dp" >

                        <ImageView
                            android:id="@+id/newmsg_toggle"
                            android:layout_width="34dp"
                            android:layout_height="23dp"
                            android:src="@drawable/setting_btn_no" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/set_divider2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/setting_voice_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_voice"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/voice_layout"
                        android:layout_width="46dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:padding="6dp" >

                        <ImageView
                            android:id="@+id/voice_toggle"
                            android:layout_width="34dp"
                            android:layout_height="23dp"
                            android:src="@drawable/setting_btn_no" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/set_divider2" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@color/white"
                    android:paddingLeft="20dp" >

                    <TextView
                        android:id="@+id/setting_shock_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/setting_shock"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <RelativeLayout
                        android:id="@+id/shock_layout"
                        android:layout_width="46dp"
                        android:layout_height="35dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20dp"
                        android:padding="6dp" >

                        <ImageView
                            android:id="@+id/shock_toggle"
                            android:layout_width="34dp"
                            android:layout_height="23dp"
                            android:src="@drawable/setting_btn_no" />
                    </RelativeLayout>
                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1px"
                    android:background="@color/set_divider2" />

                <RelativeLayout
                    android:id="@+id/logout_rl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/set_tag_bg"
                    android:paddingBottom="50dp"
                    android:paddingTop="100dp" >

                    <TextView
                        android:layout_width="250dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/setting_btn_nologin"
                        android:gravity="center"
                        android:text="@string/setting_exit" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>

        <include
            layout="@layout/loading_layout"
            android:visibility="gone" />

        <include
            layout="@layout/load_error_layout"
            android:visibility="gone" />
    </FrameLayout>

</LinearLayout>