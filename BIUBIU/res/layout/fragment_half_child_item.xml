<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/half_child_bg"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="7dp"
        android:background="@drawable/half_child_item_bf"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/head_imv"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/photo_fail" />

        <View
            android:layout_width="1dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:background="@color/half_child_line" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="66dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/super_text_black"
                    android:textSize="14sp"
                    android:gravity="center_vertical"
                    android:text="伦家是小清新"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/distance_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/list_imageview_distance"
                        android:drawablePadding="4dp"
                        android:text="0.5km"
                        android:gravity="center_vertical"
                        android:textColor="@color/page_text5"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/time_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="4dp"
                        android:drawableLeft="@drawable/list_point_green"
                        android:drawablePadding="4dp"
                        android:text="1天前"
                        android:gravity="center_vertical"
                        android:textColor="@color/page_text5"
                        android:textSize="11sp" />
                </LinearLayout>
            </RelativeLayout>
            <TextView
                android:id="@+id/school_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:drawableLeft="@drawable/list_icon_girl"
                android:drawablePadding="7dp"
                android:text="北京大学"
                android:gravity="center_vertical"
                android:textColor="@color/page_text5"
                android:textSize="11sp"
                android:layout_below="@+id/top_layout"/>
            <TextView
                android:id="@+id/description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:singleLine="true"
                android:text="Android开发艺术探索"
                android:textSize="13sp"
                android:layout_alignParentBottom="true"
                android:textColor="@color/send_biu_tag_hint"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
