<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_register_bg"
    android:gravity="center"
    android:orientation="vertical" >
    
    <ImageView
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_login" />
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp"
        android:textColor="@color/login_register_text1"
        android:textSize="18sp"        
        android:text="@string/right_menu_name"/>
    
    <TextView 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#808080"
        android:textSize="14sp"        
        android:text="@string/right_menu_slogou"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="206dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/register_item_btn"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:background="@drawable/login_register_btn_summit_light"
            android:gravity="center"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_item_btn"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_register_btn_summit_disabled"
            android:gravity="center"
            android:text="登 录"
            android:textColor="@color/login_register_text4"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>