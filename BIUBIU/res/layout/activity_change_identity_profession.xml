<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_tag_bg"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/top_changname_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/mine_chird_top_bg"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/back_changeIdentity_mine_rl"
            android:layout_width="50dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center">

            <ImageView
                android:id="@+id/back_changeIdentity_mine_img"
                android:layout_width="10dp"
                android:layout_height="17dp"
                android:src="@drawable/main_name_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title_change_identity_profession"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="身份/职业"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <RelativeLayout
            android:id="@+id/mine_identity_profession_wancheng_rl"
            android:layout_width="64dp"
            android:layout_height="44dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/kongjianruoqu_bg"
            android:gravity="center">

            <TextView
                android:id="@+id/mine_identity_profession_wancheng_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/mine_complete"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/top_changname_rl"
        android:background="#cccccc" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tip_identity_profession_change_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="30dp"
            android:text="身份/职业"
            android:textColor="#a0a0a0"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/identity_profession_change_city_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@id/tip_identity_profession_change_tv"
            android:background="@null"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="6dp"
        android:background="@color/mine_chird_view_bottom" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="60dp"
        android:background="@color/white"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/mine_identity_profession_title"
            android:textColor="@color/mine_chird_top_bg"
            android:textSize="17sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/tablebar_check" />

        <com.android.biubiu.common.city.WheelView
            android:id="@+id/id_identify_profession"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/gray"></com.android.biubiu.common.city.WheelView>

        <View
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/center2_registertwo_ll"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="25dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/is_student_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/in_school_imv"
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:layout_marginLeft="72dp"
                android:src="@drawable/register_shenfen_imageview_btn_light" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:text="@string/register_two_inschool" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/graduate_linear"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="right">

            <ImageView
                android:id="@+id/out_school_imv"
                android:layout_width="23dp"
                android:layout_height="22dp"
                android:layout_marginRight="12dp"
                android:src="@drawable/register_shenfen_imageview_normal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="72dp"
                android:gravity="center"
                android:text="@string/register_two_outschool" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>