<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/login_register_bg"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/back_layout"
        android:layout_width="120dp"
        android:layout_height="44dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="11dp"
            android:layout_height="20dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/main_icon_back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:text="返回"
            android:textColor="@color/login_register_text_back"
            android:textSize="16sp" />
    </LinearLayout>

    <ImageView
        android:layout_width="91dp"
        android:layout_height="91dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/icon_login" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="21dp"
        android:text="iU"
        android:textColor="@color/login_register_text1"
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="3dp"
        android:text="@string/right_menu_slogou"
        android:textColor="@color/login_register_text2"
        android:textSize="14sp"/>

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="118dp"
        android:orientation="vertical" >

        <Button
            android:id="@+id/register_btn"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:background="@drawable/login_register_btn_summit_light"
            android:gravity="center"
            android:text="注 册"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="250dp"
            android:layout_height="44dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/login_register_btn_summit_light"
            android:gravity="center"
            android:text="登 录"
            android:textColor="@color/login_register_text4"
            android:textSize="16sp" />
    </LinearLayout>

</LinearLayout>