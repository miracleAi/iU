<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/supenman_bg"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/title_back_rl"
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/main_green" >

        <RelativeLayout
            android:id="@+id/back_rl"
            android:layout_width="52dp"
            android:layout_height="match_parent"
            android:background="@drawable/kongjianruoqu_bg" >

            <ImageView
                android:id="@+id/title_left_imv"
                android:layout_width="22dp"
                android:layout_height="26dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="14dp"
                android:padding="6dp"
                android:src="@drawable/main_name_btn_back" />
        </RelativeLayout>

        <TextView
            android:id="@+id/photo_index_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="@string/super_man_title"
            android:textColor="@color/white"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/super_man_topstr"
                    android:textColor="@color/super_text_info"
                    android:textSize="12sp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/super_infoall_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 >

                <ImageView
                    android:id="@+id/super_imv1"
                    android:layout_width="95dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/special_label_photo_pink" />

                <LinearLayout
                    android:id="@+id/super_info_linear1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="19dp"
                    android:layout_marginTop="23dp"
                    android:layout_toLeftOf="@+id/super_imv1"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp"
                        android:text="@string/super_man_tagbig1"
                        android:textColor="@color/super_text_orange"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/super_man_taginfo1"
                        android:textColor="@color/super_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/super_divder1"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/super_info_linear1"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/special_label_line_up" />

                <ImageView
                    android:id="@+id/super_imv2"
                    android:layout_width="95dp"
                    android:layout_height="115dp"
                    android:layout_below="@+id/super_imv1"
                    android:layout_marginLeft="26dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/special_label_photo_yellow" />

                <LinearLayout
                    android:id="@+id/super_info_linear2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/super_divder1"
                    android:layout_marginLeft="19dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="7dp"
                    android:layout_toRightOf="@+id/super_imv2"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/super_man_tagbig2"
                        android:textColor="@color/super_text_orange"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="@string/super_man_taginfo2"
                        android:textColor="@color/super_text_black"
                        android:textSize="12sp" />
                </LinearLayout>

                <View
                    android:id="@+id/super_devider2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_below="@+id/super_info_linear2"
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="6dp"
                    android:background="@drawable/special_label_line_down" />

                <ImageView
                    android:id="@+id/super_imv3"
                    android:layout_width="95dp"
                    android:layout_height="115dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/super_imv2"
                    android:layout_marginRight="26dp"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/special_label_photo_blue" />

                <LinearLayout
                    android:id="@+id/super_info_linear3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/super_devider2"
                    android:layout_marginRight="19dp"
                    android:layout_toLeftOf="@+id/super_imv3"
                    android:orientation="vertical" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp"
                        android:text="@string/super_man_tagbig3"
                        android:textColor="@color/super_text_orange"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="41dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/super_man_taginfo3"
                        android:textColor="@color/super_text_black"
                        android:textSize="12sp" />
                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="19dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:text="@string/super_man_tishi"
                    android:textColor="@color/super_text_info"
                    android:textSize="12sp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/super_man_tishi_info1"
                    android:textColor="@color/super_text_black"
                    android:textSize="12sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="@string/super_man_tishi_info2"
                    android:textColor="@color/super_text_black"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/weixin_layout"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="31dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="[点击复制] "
                    android:textColor="#6cd1c9"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/weixin_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="3dp"
                    android:gravity="center_vertical"
                    android:text="liu534469675"
                    android:textColor="@color/main_green"
                    android:textSize="13sp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>